{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Excalidraw Desktop",
  "version": "0.1.0",
  "identifier": "com.dyamm.excalidraw-desktop",
  "build": {
    "frontendDist": "../src/excalidraw-app/build"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Excalidraw Desktop",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": "default-src 'self' tauri: asset: https://asset.localhost; connect-src 'self' https: wss:; img-src 'self' data: https: blob:; style-src 'self' 'unsafe-inline'; script-src 'self' 'unsafe-inline' 'unsafe-eval'; font-src 'self' data:; worker-src 'self' blob:"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/x192.png",
      "icons/x512.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
